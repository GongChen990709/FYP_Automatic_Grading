<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<welcome-file-list>
    <welcome-file>/html/login.html</welcome-file>
</welcome-file-list>
    
    
<!--Register DispatcherServlet when using SpringMVC -->
    <servlet>
        <servlet-name>springmvc_DispatherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:ApplicationContext.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>springmvc_DispatherServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>



<!--Session will expire after 15 minutes, User need to login again-->
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

</web-app>